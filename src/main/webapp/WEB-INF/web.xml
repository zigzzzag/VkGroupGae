<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.Main</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>refreshData</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.RefreshData</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>refreshData</servlet-name>
        <url-pattern>/refreshData</url-pattern>
    </servlet-mapping>

   <servlet>
        <servlet-name>groupManager</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.GroupManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>groupManager</servlet-name>
        <url-pattern>/groupMembers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groupReport</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.GroupReport</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>groupReport</servlet-name>
        <url-pattern>/groupReport</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>unloadGroupData</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.UnloadGroupData</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>unloadGroupData</servlet-name>
        <url-pattern>/unloadGroupData</url-pattern>
    </servlet-mapping>
</web-app>
