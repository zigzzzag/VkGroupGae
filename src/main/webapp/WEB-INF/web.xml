<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>org.zigzzzag.group.scheduler.VkGroupScheduler</listener-class>
    </listener>

   <servlet>
        <servlet-name>groupMembersAction</servlet-name>
        <servlet-class>org.zigzzzag.group.servlet.GroupManager</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>groupMembersAction</servlet-name>
        <url-pattern>/groupMembers/*</url-pattern>
    </servlet-mapping>
</web-app>
